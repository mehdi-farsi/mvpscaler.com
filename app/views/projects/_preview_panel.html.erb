<%# app/views/projects/_preview_panel.html.erb %>
<%# locals: device:, project: %>
<div class="mt-4 rounded-xl bg-white border border-gray-200 shadow-sm overflow-hidden">
  <% if device == "mobile" %>
    <div class="mx-auto my-6 border border-gray-200 rounded-[2rem] p-3 w-[380px]">
      <iframe
        src="<%= landing_show_path(project.slug) %>"
        class="w-[344px] h-[600px] rounded-[1.5rem] overflow-hidden">
      </iframe>
    </div>
  <% else %>
    <iframe
      src="<%= landing_show_path(project.slug) %>"
      class="w-full h-[70vh]">
    </iframe>
  <% end %>
</div>