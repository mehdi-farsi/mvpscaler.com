<%# app/views/projects/show.html.erb %>
<% device = params[:device].presence_in(%w[desktop mobile]) || "desktop" %>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
  <div class="lg:col-span-2 space-y-6">
    <!-- Overview + Tabs + Frame -->
    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <h2 class="font-semibold text-gray-900 mb-3">
        <i class="bi bi-graph-up-arrow text-gray-500 me-2"></i> Overview
      </h2>

      <p class="text-sm text-gray-600">
        Public page:
        <%= link_to @project.public_url, @project.public_url, class: "text-emerald-700 hover:underline", target: "_blank", rel: "noopener" %>
      </p>

      <!-- Tabs -->
      <div class="mt-4 flex flex-wrap gap-2 items-center">
        <%= link_to "Edit",
                    edit_project_landing_path(@project),
                    data: { turbo_frame: "project_panel" },
                    class: "rounded-lg border border-gray-300 px-3 py-1.5 text-sm" %>

        <%= link_to "Desktop",
                    project_path(@project, device: :desktop),
                    data: { turbo_frame: "project_panel" },
                    class: "rounded-lg border border-gray-300 px-3 py-1.5 text-sm #{'bg-gray-100' if device=='desktop'}" %>

        <%= link_to "Mobile",
                    project_path(@project, device: :mobile),
                    data: { turbo_frame: "project_panel" },
                    class: "rounded-lg border border-gray-300 px-3 py-1.5 text-sm #{'bg-gray-100' if device=='mobile'}" %>
      </div>

      <!-- Frame -->
      <%= turbo_frame_tag :project_panel do %>
        <%# Default content: same as Desktop %>
        <div class="mt-4 rounded-xl bg-white border border-gray-200 shadow-sm overflow-hidden">
          <iframe src="<%= landing_show_path(@project.slug) %>" class="w-full h-[70vh]"></iframe>
        </div>
      <% end %>
    </div>

    <!-- Your idea -->
    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <h2 class="font-semibold text-gray-900 mb-3">
        <i class="bi bi-lightbulb text-gray-500 me-2"></i> Your idea
      </h2>
      <% if @project.briefs.any? %>
        <% @project.briefs.order(created_at: :desc).each do |b| %>
          <div class="border border-gray-200 rounded-lg p-4 mb-3">
            <div class="text-sm text-gray-600">Audience: <%= b.audience %></div>
            <div class="text-xs text-gray-500">Problem: <%= b.problem %></div>
            <div class="text-xs text-gray-500">Your solution: <%= b.product_idea %></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
