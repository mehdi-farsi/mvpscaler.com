<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <div class="lg:col-span-2 space-y-6">
    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <h2 class="font-semibold text-gray-900 mb-3"><i class="bi bi-graph-up-arrow text-gray-500 me-2"></i> Overview</h2>
      <p class="text-sm text-gray-600">Public page: <%= link_to @project.public_url, @project.public_url, class: "text-emerald-700 hover:underline" %></p>
      <div class="mt-4 flex flex-wrap gap-3">
        <%= link_to "Preview desktop", project_preview_path(@project, device: :desktop), class: "rounded-lg border border-gray-300 px-4 py-2 text-gray-700 hover:bg-gray-50" %>
        <%= link_to "Preview mobile",  project_preview_path(@project, device: :mobile),  class: "rounded-lg border border-gray-300 px-4 py-2 text-gray-700 hover:bg-gray-50" %>
        <%= link_to "Template settings", edit_project_landing_settings_path(@project), class: "rounded-lg border border-gray-300 px-4 py-2 text-gray-700 hover:bg-gray-50" %>
      </div>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <h2 class="font-semibold text-gray-900 mb-3"><i class="bi bi-lightbulb text-gray-500 me-2"></i> Idea brief</h2>
      <% if @project.briefs.any? %>
        <% @project.briefs.order(created_at: :desc).each do |b| %>
          <div class="border border-gray-200 rounded-lg p-4 mb-3">
            <div class="text-sm text-gray-600">Audience: <%= b.audience %></div>
            <div class="text-xs text-gray-500">Status: <%= b.status %></div>
            <div class="mt-2 flex gap-2">
              <%= link_to "Open", project_brief_path(@project, b), class: "text-emerald-700 hover:underline text-sm" %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p class="text-sm text-gray-600 mb-3">Create a brief and we will generate copy and colors for your landing.</p>
      <% end %>
      <%= link_to "New brief", new_project_brief_path(@project), class: "rounded-lg bg-emerald-600 text-white px-4 py-2 hover:bg-emerald-500" %>
    </div>
  </div>

  <div class="space-y-6">
    <div class="rounded-xl bg-white border border-gray-200 p-5 shadow-sm">
      <h2 class="font-semibold text-gray-900 mb-3"><i class="bi bi-gear text-gray-500 me-2"></i> Project</h2>
      <%= link_to "Edit project", edit_project_path(@project), class: "text-emerald-700 hover:underline text-sm" %>
    </div>
  </div>
</div>
