<div class="max-w-xl mx-auto">
  <h1 class="text-2xl font-bold text-gray-900 mb-6">Create project</h1>
  <%= form_with model: @project, class: "space-y-5" do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "block w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>
    <div>
      <%= f.label :slug, "Slug (used in /l/:slug)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :slug, class: "block w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>
    <div>
      <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description, rows: 3, class: "block w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>
    <%= f.submit "Create", class: "rounded-lg bg-emerald-600 text-white px-5 py-2 hover:bg-emerald-500" %>
  <% end %>
</div>
