<div class="max-w-md mx-auto py-10">
  <h1 class="text-2xl font-semibold mb-6">Choose a new password</h1>

  <%= form_with model: resource,
                url: password_path(resource_name),
                method: :put,
                data: { turbo: true },
                class: "space-y-2" do |f| %>

    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field_row :password, label: "New password", icon: "lock", reveal: true, autocomplete: "new-password" %>
    <%= f.password_field_row :password_confirmation, label: "Confirm new password", icon: "shield-lock", reveal: true, autocomplete: "new-password" %>

    <%= f.submit_primary "Update password" %>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= link_to "Back to Sign in", new_session_path(resource_name), class: "text-emerald-700 hover:underline" %>
  </div>
</div>