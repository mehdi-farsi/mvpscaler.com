<div class="max-w-md mx-auto py-10">
  <h1 class="text-2xl font-semibold mb-6">Reset your password</h1>

  <%= form_with model: resource,
                url: password_path(resource_name),
                data: { turbo: true },
                class: "space-y-2" do |f| %>

    <%= f.email_field_row :email, label: "Email", icon: "envelope",
                          hint: "Weâ€™ll send you a reset link if this email is in our records." %>

    <%= f.submit_primary "Send reset link" %>
  <% end %>

  <div class="mt-6 text-center text-sm">
    <%= link_to "Back to Sign in", new_session_path(resource_name), class: "text-emerald-700 hover:underline" %>
  </div>
</div>