<div class="max-w-md mx-auto py-10">
  <h1 class="text-2xl font-semibold mb-6">Create your account</h1>

  <%= form_with model: resource,
                url: registration_path(resource_name),
                data: { turbo: true },
                class: "space-y-2" do |f| %>

    <%= f.text_field_row  :name,  label: "Full name", icon: "person", hint: "Used in your dashboard and public pages." %>
    <%= f.email_field_row :email, label: "Email",      icon: "envelope" %>
    <%= f.password_field_row :password, label: "Password", icon: "lock", reveal: true, autocomplete: "new-password" %>
    <%= f.password_field_row :password_confirmation, label: "Confirm password", icon: "shield-lock", reveal: true, autocomplete: "new-password" %>

    <%= f.submit_primary "Create account" %>
  <% end %>

  <div class="my-6 text-center text-sm text-gray-500">or</div>

  <div class="text-center">
    <%= button_to user_google_oauth2_omniauth_authorize_path,
                  method: :post,
                  data: { turbo: false },
                  class: "inline-flex items-center gap-2 rounded-lg border border-gray-300 bg-white px-4 py-2 font-medium text-gray-700 shadow-sm hover:bg-gray-50" do %>
      <i class="bi bi-google"></i>
      <span>Continue with Google</span>
    <% end %>
  </div>

  <div class="mt-6 text-center text-sm">
    <%= link_to "Already have an account? Sign in", new_session_path(resource_name), class: "text-emerald-700 hover:underline" %>
  </div>
</div>