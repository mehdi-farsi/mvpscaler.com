<div class="max-w-3xl mx-auto py-10 space-y-6">
  <h1 class="text-2xl font-bold text-gray-900">Tell us about your idea</h1>
  <p class="text-gray-600">We will generate the first version of your landing copy and theme.</p>

  <%= form_with model: [@project, @brief], class: "space-y-5" do |f| %>
    <div class="rounded-xl bg-white border border-gray-200 shadow-sm p-5">
      <%= f.label :audience, "Who is this for?", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :audience, class: "block w-full rounded-lg border border-gray-300 px-3 py-2" %>
      <p class="mt-1 text-xs text-gray-500">Examples: developers, indie hackers, product teams.</p>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 shadow-sm p-5">
      <%= f.label :problem, "What problem are you solving?", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :problem, rows: 4, class: "block w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>

    <div class="rounded-xl bg-white border border-gray-200 shadow-sm p-5">
      <%= f.label :product_idea, "Your product idea", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :product_idea, rows: 4, class: "block w-full rounded-lg border border-gray-300 px-3 py-2" %>
    </div>

    <div class="flex items-center gap-3">
      <%= f.submit "Save brief", class: "rounded-lg bg-emerald-600 px-5 py-2 text-white hover:bg-emerald-500" %>
      <%= link_to "Cancel", project_path(@project), class: "rounded-lg border border-gray-300 px-5 py-2 text-gray-700 hover:bg-gray-50" %>
    </div>
  <% end %>
</div>
